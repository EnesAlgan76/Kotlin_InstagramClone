<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Share.ShareCameraFragment">

    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/cameraViewShareVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.otaliastudios.cameraview.CameraView>


    <com.iammert.library.cameravideobuttonlib.CameraVideoButton
        android:id="@+id/btn_record"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:layout_gravity="center|bottom"
        app:cvb_recording_color="#D438A2"/>


    <ImageView
        android:id="@+id/iv_closeButtonVideo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/iv_close_white"
        android:padding="12dp"
        android:layout_gravity="top|left"/>

</FrameLayout>